extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.tour-container.my-4
    .row
      .col-12
        +box-head(pageTitle)

    .row
      .col-12 
        table(class="table table-bordered table-hover text-center align-middle shadow-sm rounded")
          thead(class="table-primary text-white")
            tr 
              th(style="width: 5%") STT 
              th(style="width: 10%") Ảnh
              th Tiêu đề 
              th Giá 
              th Số lượng 
              th Tổng tiền 
              th Hành động 
          tbody 
            tr 
              td 1
              td 
                img(src="https://backend.daca.vn/assets/tour/images/tour-ha-long.jpg", alt="Tour Ha Long", class="rounded shadow-sm", width="80px")
              td 
                a(href=`/tours/detail/:slugTour`, class="fw-bold text-decoration-none text-primary") Tour Hạ Long 
              td 
                span.price 1,200,000 
                span.text-muted  đ
              td 
                input(
                  type="number"
                  name="quantity"
                  class="form-control text-center"
                  value="1"
                  min="1"
                  item-id=":tourId"
                  style="max-width: 60px;"
                )
              td 
                span.total-price 1,200,000 
                span.text-muted  đ
              td 
                button(
                  btn-delete=":tourId"
                  class="btn btn-sm btn-danger d-flex align-items-center gap-1"
                ) 
                  i(class="bi bi-trash") 
                  | Xóa 

      h4(class="text-end mt-3") 
        span Tổng đơn hàng: 
        span#total-price.fw-bold.text-danger 0 
        span.text-muted  đ

  // Form đặt tour 
  .row.justify-content-center.mt-5
    .col-md-8
      .card.shadow-lg.p-4.rounded-3
        .card-body
          +box-head("Thông tin khách hàng")
          form(form-order)
            .row.mb-3
              .col-md-6
                label.fw-bold(for="fullName") Họ tên
                input(
                  type="text"
                  class="form-control"
                  id="fullName"
                  name="fullName"
                  placeholder="Nhập họ tên"
                  required
                )
              .col-md-6
                label.fw-bold(for="phone") Số điện thoại
                input(
                  type="text"
                  class="form-control"
                  id="phone"
                  name="phone"
                  placeholder="Nhập số điện thoại"
                  required
                )
            .mb-3
              label.fw-bold(for="note") Ghi chú
              textarea(
                class="form-control"
                id="note"
                name="note"
                rows="3"
                placeholder="Nhập ghi chú (nếu có)"
              )

            button(
              type="submit"
              class="btn btn-lg btn-success w-100 mt-3"
            ) 
              i(class="bi bi-check-circle") 
              | Xác nhận đặt tour
